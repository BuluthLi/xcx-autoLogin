.top-navbar {
  width: 100%;
  position: fixed;
  top: 0;
  left: 0;
  zoom: 1;
  z-index: 999;
  background: white;
}

/*  */

.blank {
  width: 100%；;
}

.status-box {
  position: absolute;
  left: 20rpx;
  top: 20px;
  right: 20rpx;
  bottom: 0;
  display: flex;
  align-items: center;
}

.top-icon-box {
  width: 88px;
  height: 33px;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 60px;
  background: #fcfcfc;
  padding: 5rpx;
  border: 1px solid #e8e8e8;
  box-sizing: border-box;
}

.top-back {
  width: 18px;
  height: 18px;
  font-size: 20px;
  flex: 1;
}

.top-index {
  width: 18px;
  height: 18px;
  font-size: 20px;
  flex: 1;
}

.top-split-line {
  width: 1px;
  height: 70%;
  background: #cacaca;
}

.top-title {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  font-size: 16px;
  font-family:'PingFang-SC-Bold';
  font-weight: bold;
}

.show-tip-one {
  width: 329rpx;
  height: 104rpx;
  position: absolute;
  right: 20px;
  top: 40px;
}

