.search-fixed {
  position: fixed;
  top: 0px;
  left: 0px;
  z-index: 699;
}

.search-box {
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 100%;
  height: 33px;
}

.search-bar {
  background: #fff;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  box-sizing: border-box;
  padding: 4px 20rpx;
  flex: 1;
  height: 33px;
  border-radius: 50rpx;
}

.search-bar input {
  flex: 1;
  font-size: 24rpx;
  margin: 0px;
  height: 48rpx;
}

.search-bar image {
  width: 30rpx;
  height: 30rpx;
  margin: 0px 10rpx 0px 0rpx;
}

.search-cancle {
  padding: 0px;
  margin: 0px;
  background: none;
  border: none;
  line-height: 36rpx;
  color: #666;
}

.search-cancle:after,
.search-ok:after {
  border: none;
}

.search-ok {
  background: none;
  border: none;
  font-size: 28rpx;
  padding: 0;
  margin: 0px 0px 0px 20rpx;
  color: #666;
}

