/* 底部导航 */

.bottom-nav {
  position: fixed;
  bottom: 0px;
  left: 0px;
  width: 750rpx;
  z-index: 799;
  background: #fff;
  /*box-shadow: 0px 0px 20rpx rgba(0, 0, 0, 0.3);*/
}

.bottom-nav-box {
  display: flex;
  justify-content: space-between;
  width: 100%;
  height: 100rpx;
  align-items: center;
  align-content: center;
}

.bottom-nav-mid {
  width: 64rpx;
  height: 80rpx;
  position: relative;
  flex-shrink: 0;
  flex-grow: 0;
}

.bottom-nav-mid-box {
  position: absolute;
  top: 6rpx;
  width: 64rpx;
  height: 64rpx;
  left: 0px;
  background: #fff;
  border-radius: 70rpx;
  border: 1px solid rgb(244, 138, 25);
  overflow: hidden;
  display: flex;
  justify-content: center;
  align-items: center; /*box-shadow: 0px -10rpx 10rpx rgba(0, 0, 0, 0.3);*/
}

.bottom-nav-mid image {
  width: 80%;
}

.bottom-nav-l, .bottom-nav-r {
  display: flex;
  justify-content: center;
  align-items: center;
  flex: 1;
  text-align: center;
}

.bottom-nav-l image, .bottom-nav-r image {
  width: 36rpx;
  height: 36rpx;
}

.bottom-nav-l text, .bottom-nav-r text {
  color: #bbb;
  font-size: 20rpx;
  display: block;
}

.bottom-nav-r {
  position: relative;
}

.bottom-msg-dot {
  position: absolute;
  z-index: 9;
  right: 20rpx;
  top: 10rpx;
  width: 16rpx;
  height: 16rpx;
  background: #e60012;
  border-radius: 50%;
}

.person-tip {
  position: absolute;
  padding: 4rpx 8rpx;
  background: #f76a72;
  border-radius: 24rpx;
  font-size: 16rpx;
  color: white;
  top: 0;
  right: -60rpx;
}
